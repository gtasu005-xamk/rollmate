datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String
  createdAt DateTime @default(now())
}

model TrainingSession {
  id          String   @id @default(uuid())
  date        DateTime
  feeling     Int
  performance Int
  rating      Int
  feedback    String?
}

model Theme {
  id        String   @id @default(uuid())
  name      String
  startAt   DateTime
  endAt     DateTime
  createdAt DateTime @default(now())
}

model Task {
  id          String    @id @default(uuid())
  title       String
  completed   Boolean   @default(false)
  createdAt   DateTime  @default(now())
  completedAt DateTime?
}